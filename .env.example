# Domain
# Set to your deployment domain in staging/production.
DOMAIN=localhost
# DOMAIN=localhost.tiangolo.com

# Frontend URL used by backend for links (emails, redirects)
FRONTEND_HOST=http://localhost:5173

# Environment: local | staging | production
ENVIRONMENT=local

# Project metadata
PROJECT_NAME=mnsAI
STACK_NAME=full-stack-fastapi-project

# Backend CORS origins (comma-separated)
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:5173,https://localhost,https://localhost:5173,http://localhost.tiangolo.com

# Security / bootstrap user
SECRET_KEY=replace-with-a-random-secret-key
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=replace-with-a-strong-password

# Emails
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=info@example.com
SMTP_TLS=True
SMTP_SSL=False
SMTP_PORT=587

# Postgres (external DB)
# POSTGRES_SERVER=host.docker.internal
POSTGRES_SERVER=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_DB=your_database
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=replace-with-db-password

# Optional monitoring
SENTRY_DSN=

# Docker image names
DOCKER_IMAGE_BACKEND=backend
DOCKER_IMAGE_FRONTEND=frontend

# OpenAI
OPENAI_API_KEY=replace-with-openai-api-key
OPENAI_DEPLOYMENT_ID=gpt-4o

# App limits
MAX_EXTR_COUNT=70
MAX_CONCURRENT_PDF_CONVERSION=4
BATCH_SIZE=100

# Optional: used by playwright service in docker-compose.override.yml
CI=
